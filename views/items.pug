extends base

block content
   h1.text-6xl Welcome to Talaria
   table.table-fixed(class="w-11/12 mx-auto")
      thead.bg-teal-500.text-white
         tr
            th.border(class="w-1/12 px-4 py-2") Date
            th.border(class="w-1/6 px-4 py-2") Tracking link
            th.border(class="w-1/6 px-4 py-2") Link 
            th.border Name
            th.border(class="w-1/12 px-4 py-2") Type
            th.border Status
            th.border(class="w-1/12 px-4 py-2") Price
            th.border(class="w-1/12") Quantity
            th.border Total Price
      tbody
         each item in items
            tr(v-for="item in items" class="bg-white odd:bg-gray-200")
               th.border-b-2(class="px-4 py-2")= new Date(item.createdAt).toLocaleString('en-us', {month: 'long', year: 'numeric', day: 'numeric'})
               th.border-b-2(class="px-4 py-2 truncate")
                  a(href=`${item.trackingLink}`)= item.trackingLink
               th.border-b-2(class="px-4 py-2 truncate")
                  a(href=`${item.link}`)= item.link
               th.border-b-2
                  if item.name.length > 20
                     div.tooltip= item.name.slice(0, 20)
                        span.tooltiptext= item.name
                  else
                     di.tooltip= item.name
               th.border-b-2= `${item.itemType ? item.itemType : 'no info'}`
               th.border-b-2= item.status.split('-').join(' ')
               th.border-b-2= new Intl.NumberFormat('de-DE', {style: 'currency', currency: 'USD'}).format(item.pricePerItem)
               th.border-b-2= item.quantity
               if item.status === 'ordered'
                  th.border-b-2= new Intl.NumberFormat('de-DE', {style: 'currency', currency: 'VND'}).format(item.actualCost)
               else
                  th.border-b-2 
                     button(class="bg-orange-300 rounded px-3 py-1 hover:bg-orange-500 hover:text-white") Order
      